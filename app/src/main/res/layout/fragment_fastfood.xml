<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fastfood_fl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FastfoodFragment">

    <TextView
        android:id="@+id/fastfood_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="250dp"
        android:textStyle="bold"
        android:text="패스트푸드"
        android:textSize="25dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:id="@+id/fastfood_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/fastfood_bt_맥도날드"
                    android:background="@drawable/button_push"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:text="맥도날드"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/fastfood_bt_롯데리아"
                    android:background="@drawable/button_push"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="롯데리아"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/fastfood_bt_KFC"
                    android:background="@drawable/button_push"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:text="KFC"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/fastfood_bt_맘스터치"
                    android:background="@drawable/button_push"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="17dp"
                    android:text="맘스터치"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/fastfood_bt_피자헛"
                    android:background="@drawable/button_push"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="피자헛"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/fastfood_bt_사용법"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="사용법알아보기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fastfood_sv"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/fastfood_bt_모의사용"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:text="모의사용"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fastfood_sv"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>